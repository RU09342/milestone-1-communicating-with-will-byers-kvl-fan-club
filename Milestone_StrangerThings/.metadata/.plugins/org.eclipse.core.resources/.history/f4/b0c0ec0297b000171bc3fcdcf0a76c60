#include <msp430fr6989.h>

#define RECEIVE     BIT3
#define TRANSMIT    BIT1

void initGPIO(void){
    P4SEL1 |= RECEIVE; // P1.1 = RXD, P1.2 = TXD
    P4SEL2 &= ~RECEIVE; // P

    P2SEL1 |= TRANSMIT;
    P2SEL2 |= TRANSMIT;

    // Initialize unused ports to reduce current consumption
    P1SEL1 = 0xEF;
    P1SEL2 = 0xEF;
    P3SEL1 = 0xEF;
    P3SEL2 = 0xEF;
    P5SEL1 = 0xEF;
    P5SEL2 = 0xEF;
    P6SEL1 = 0xEF;
    P6SEL2 = 0xEF;
    P7SEL1 = 0xEF;
    P7SEL2 = 0xEF;
    P8SEL1 = 0xEF;
    P8SEL2 = 0xEF;
    P9SEL1 = 0xEF;
    P9SEL2 = 0xEF;
}
